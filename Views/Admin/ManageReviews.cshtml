@model List<CampRating.Models.Review>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Manage Reviews - CampRating</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="container">
        <h2>Manage Reviews</h2>

        <table border="1" cellpadding="10">
            <thead>
                <tr>
                    <th>Content</th>
                    <th>Camping Site</th>
                    <th>User</th>
                    <th>Actions</th> <!-- Добавена колона за действия -->
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.Content</td>
                        <td>@review.CampingSite.Name</td>
                        <td>@review.User.Username</td>
                        <td>
                            <form method="post" action="/Admin/DeleteReview/@review.Id" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <button type="submit" class="button delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <br />
        <a href="/Admin/Dashboard" class="back-link">Back to Dashboard</a>
    </div>
</body>
</html>
